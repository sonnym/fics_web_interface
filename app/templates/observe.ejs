<tab heading="watch" ng-controller="ObservationCtrl" ng-if="isLoggedIn" active="tabs.observe.active" select="changeTab('observe')">
  <tabset class="tab-container">
    <tab heading="games">
      <pagination
        class="pagination-sm"
        previous-text="&lsaquo;"
        next-text="&rsaquo;"
        first-text="&laquo;"
        last-text="&raquo;"
        total-items="games.length"
        ng-model="currentPage"
        items-per-page="20"
        boundary-links="true"
        max-size="5"
        rotate="false">
      </pagination>

      <ul ng-if="games">
        <li ng-repeat="game in games | orderByCombinedRating | paginationSubset:20:currentPage">
          <a href="#" ng-click="watch(game.number)">
            {{ game.white.name }} ({{ game.white.rating }}) vs. {{ game.black.name }} ({{ game.black.rating }})
          </a>
        </li>
      </ul>
    </tab>

    <tab ng-repeat="game in observations">
      <tab-heading>
        {{ game.white.name }} v. {{ game.black.name }}
        <a href="#" ng-click="stopWatching(game.number)">x</a>
      </tab-heading>

      <div class="observe">
        <div class="board-container">
          <board fen="game.metaData.position" white="game.white" black="game.black" move="game.metaData.current.color" time="game.metaData.time" complete="game.isComplete"></board>
        </div>

        <div class="moves">
          <h4 ng-if="game.metaData.result">{{ game.metaData.result }}</h4>

          <table>
            <tbody>
              <tr ng-repeat="moves in game.moves" ng-if="game.moves">
                <th>{{ $index + 1 }}</th>
                <td>{{ moves[0] }}</td>
                <td>{{ moves[1] }}</td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="chat">
          <div class="observers">
            <ul>
              <li ng-repeat="observer in game.observers | orderBy:'toString'">
                {{ observer }}
              </li>
            </ul>
          </div>

          <messages messages="game.messages" send="sendMessage(game.number)(mode, message)" allowed-modes="allowedModes"
          ></messages>
        </div>
      </div>
    </tab>
  </tabset>
</tab>
